---
// Author: bubba-haiku
// Date: 25 February 2026
// PURPOSE: Landing page for the Lobster Art Museum with a hero, wing navigation, and grouped archive.
// SRP/DRY check: Pass - reuses museum helpers for entry data and grouping logic.
import Base from '../layouts/Base.astro';
import type { MuseumEntry } from '../lib/lobster-museum';
import { getMuseumEntries, getFeaturedEntries, getArchiveEntries, inferSeries } from '../lib/lobster-museum';

const entries = getMuseumEntries();
const featuredEntries = getFeaturedEntries(entries);
const archiveEntries = getArchiveEntries(entries);
const sculptureHighlights = entries.filter((entry) => entry.filename.startsWith('b17-')).length;

const wingSeriesOrder = [
  'Sculpture Series',
  'Museum Narrative',
  'Expensive Medieval Tapestry',
  'Great Mistakes',
  'Avant-Garde Expansion',
  'Metamorphosis',
  'Triskaidekaphobia',
  'Baroque Drama',
  'Art Deco',
  'Photoreal + Math',
  'Avant-Garde',
  'Classical Oil',
];

const specialtyWings = [
  {
    label: 'Expensive Medieval Tapestry',
    href: '/lobster-art-museum/expensive-medieval-tapestry',
  },
  { label: 'Great Mistakes', href: '/lobster-art-museum/great-mistakes' },
];

const groupedArchiveEntries = archiveEntries.reduce<Record<string, MuseumEntry[]>>((acc, entry) => {
  const seriesName = inferSeries(entry.filename);
  if (!acc[seriesName]) {
    acc[seriesName] = [];
  }
  acc[seriesName].push(entry);
  return acc;
}, {});

const additionalSeries = Object.keys(groupedArchiveEntries)
  .filter((name) => !wingSeriesOrder.includes(name))
  .sort();

const orderedSeries = [...wingSeriesOrder, ...additionalSeries];

const slugifySeries = (name: string) =>
  name
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-+|-+$)/g, '');

const seriesGroups = orderedSeries
  .map((name) => ({
    name,
    id: slugifySeries(name),
    entries: groupedArchiveEntries[name] ?? [],
  }))
  .filter((group) => group.entries.length > 0);
---

<Base
  title="Lobster Art Museum"
  description="Lobster Art Museum — dedicated route for generated artwork archive with individual shareable pages for every piece."
  canonicalUrl="/lobster-art-museum"
>
  <main class="max-w-7xl mx-auto px-4 py-16 sm:py-24">
    <!-- Hero section with random featured image background -->
    <section class="mb-12 relative overflow-hidden rounded-2xl border border-border">
      {featuredEntries.length > 0 && (
        <img 
          src={featuredEntries[Math.floor(Math.random() * featuredEntries.length)].src}
          alt=""
          aria-hidden="true"
          class="absolute inset-0 w-full h-full object-cover"
        />
      )}
      <!-- Fade overlay for text legibility -->
      <div class="absolute inset-0 bg-gradient-to-r from-bg-primary/95 via-bg-primary/80 to-bg-primary/60"></div>
      
      <!-- Content -->
      <div class="relative z-10 p-8 sm:p-12 min-h-[280px] flex flex-col justify-center">
        <p class="font-mono text-xs text-edge-green uppercase tracking-[0.25em] mb-2">
          Lobster Art Museum
        </p>
        <h1 class="text-2xl sm:text-3xl font-bold text-text-primary mb-4 leading-tight max-w-2xl">
          {entries.length} works. Infinite variations.
        </h1>
        <p class="text-sm text-text-muted max-w-2xl leading-relaxed mb-6">
          Every piece has its own shareable page. Explore by wing, discover by series.
        </p>
        <div class="flex flex-wrap gap-3 text-xs font-mono">
          <span class="px-3 py-1 rounded-full border border-edge-green/40 text-edge-green">{entries.length} total works</span>
          <span class="px-3 py-1 rounded-full border border-node-blue/40 text-node-blue">{featuredEntries.length} featured</span>
          <span class="px-3 py-1 rounded-full border border-rust-orange/40 text-rust-orange">{sculptureHighlights} sculptures</span>
        </div>
      </div>
    </section>

    {seriesGroups.length > 0 && (
      <section class="mb-12 border border-border rounded-2xl overflow-hidden">
        <div class="bg-bg-secondary p-6 sm:p-8">
          <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
            <div>
              <p class="font-mono text-xs text-rust-orange uppercase tracking-[0.25em] mb-1">Wings</p>
              <h2 class="text-2xl font-bold text-text-primary">Jump straight to each wing</h2>
              <p class="text-sm text-text-muted max-w-2xl leading-relaxed">
                Atlas-style navigation that points to every series grouping so you can land directly in the wing you
                want to explore.
              </p>
            </div>
            <div class="flex flex-wrap gap-2 text-[11px] font-mono uppercase tracking-[0.18em]">
              {specialtyWings.map((specialty) => (
                <a
                  href={specialty.href}
                  class="px-3 py-1 rounded-full border border-border text-node-blue hover:text-edge-green transition-colors"
                >
                  {specialty.label}
                </a>
              ))}
            </div>
          </div>
          <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            {seriesGroups.map((series) => (
              <a
                href={`#${series.id}`}
                class="group relative rounded-2xl border border-border overflow-hidden bg-bg-primary transition hover:border-edge-green hover:shadow-md"
              >
                <!-- Thumbnail preview -->
                {series.entries.length > 0 && (
                  <div class="relative h-40 overflow-hidden bg-bg-secondary">
                    <img 
                      src={series.entries[0].src} 
                      alt={series.name}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-bg-primary/80 via-transparent to-transparent"></div>
                  </div>
                )}
                <!-- Content -->
                <div class="p-4">
                  <div class="flex items-start justify-between gap-2 mb-2">
                    <span class="text-sm font-semibold text-text-primary">{series.name}</span>
                    <span class="text-[9px] uppercase tracking-[0.3em] text-text-muted whitespace-nowrap">Wing</span>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="rounded-full border border-border px-2 py-1 text-[10px] font-mono uppercase tracking-[0.18em] text-text-muted">
                      {series.entries.length} works
                    </span>
                    <span class="text-[11px] font-semibold uppercase tracking-[0.3em] text-rust-orange transition group-hover:text-edge-green">
                      Jump ↗
                    </span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    {featuredEntries.length > 0 && (
      <section class="mb-12">
        <div class="mb-6">
          <p class="font-mono text-xs text-rust-orange uppercase tracking-[0.25em] mb-2">Featured</p>
          <h2 class="text-2xl font-bold text-text-primary mb-1">Curated Selection</h2>
          <p class="text-sm text-text-muted">The strongest pieces from our collection — all shareable with dedicated pages.</p>
        </div>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          {featuredEntries.map((entry) => (
            <article class="group border border-border rounded-xl overflow-hidden bg-bg-secondary shadow-sm hover:shadow-md hover:border-edge-green transition-all duration-200">
              <a href={entry.href} class="block relative overflow-hidden bg-bg-primary">
                <img 
                  src={entry.src} 
                  alt={entry.title} 
                  loading="lazy" 
                  class="w-full aspect-square object-cover group-hover:scale-105 transition-transform duration-300" 
                />
              </a>
              <div class="p-3 border-t border-border">
                <a href={entry.href} class="text-sm font-semibold text-text-primary hover:text-node-blue transition-colors line-clamp-2">
                  {entry.title}
                </a>
                <p class="mt-1 text-[10px] uppercase tracking-[0.25em] text-text-muted">{entry.series}</p>
                <a href={entry.href} class="inline-flex mt-2 text-[10px] uppercase tracking-[0.2em] text-rust-orange hover:text-edge-green transition-colors">
                  View →
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    {archiveEntries.length > 0 ? (
      <section>
        <div class="flex items-center justify-between mb-6 gap-4 flex-wrap">
          <h2 class="text-xl sm:text-2xl font-bold text-text-primary">Archive Gallery</h2>
          <p class="text-xs font-mono text-text-muted uppercase tracking-[0.2em]">Grouped by wing so the museum layout stays clear</p>
        </div>
        <div class="space-y-10">
          {seriesGroups.map((series) => (
            <section id={series.id} class="space-y-5 rounded-2xl border border-border bg-bg-secondary p-5">
              <header class="flex flex-col gap-2 sm:flex-row sm:items-baseline sm:justify-between">
                <h3 class="text-lg font-semibold text-text-primary">{series.name}</h3>
                <span class="inline-flex items-center rounded-full border border-border px-3 py-1 text-[11px] font-mono uppercase tracking-[0.2em] text-text-muted">
                  {series.entries.length} works
                </span>
              </header>
              <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3">
                {series.entries.map((entry) => (
                  <figure class="mb-0 rounded-xl border border-border bg-bg-primary overflow-hidden shadow-sm">
                    <a href={entry.href} class="block">
                      <img
                        src={entry.src}
                        alt={entry.title}
                        loading="lazy"
                        class="w-full h-auto object-contain bg-bg-secondary"
                      />
                    </a>
                    <figcaption class="px-4 py-3 border-t border-border">
                      <a href={entry.href} class="text-sm font-semibold text-text-primary hover:text-node-blue transition-colors">
                        {entry.title}
                      </a>
                      <div class="mt-1 text-[10px] uppercase tracking-[0.25em] text-text-muted">{entry.series}</div>
                      <a
                        href={entry.href}
                        class="inline-flex mt-2 text-[10px] uppercase tracking-[0.2em] text-rust-orange hover:text-edge-green transition-colors"
                      >
                        Open share page →
                      </a>
                    </figcaption>
                  </figure>
                ))}
              </div>
            </section>
          ))}
        </div>
      </section>
    ) : (
      <section class="border border-border rounded-xl p-6 bg-bg-secondary">
        <p class="text-sm text-text-muted">No generated artwork found yet in <code>/public/generated</code>.</p>
      </section>
    )}
  </main>
</Base>
