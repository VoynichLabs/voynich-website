          <div>
            <p class="text-sm font-medium text-text-primary">Major inspiration for ARC Explainer project</p>
            <p class="text-xs text-muted mt-1">Reference: <a href="https://arc.markbarney.net/simonS.png" target="_blank" rel="noopener" class="text-accent-glow hover:underline">arc.markbarney.net profile</a></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Repository Table -->
    <div class="mb-10">
      <h2 class="text-xs font-mono text-muted uppercase tracking-widest mb-4">Repository Index</h2>
      <div class="bg-surface border border-border rounded-xl overflow-hidden">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-border">
              <th class="text-left px-4 py-3 text-xs font-mono text-muted uppercase">Repository</th>
              <th class="text-right px-4 py-3 text-xs font-mono text-muted uppercase">Stars</th>
              <th class="text-left px-4 py-3 text-xs font-mono text-muted uppercase hidden sm:table-cell">Description</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            {[
              { name: "PlanExe", url: "https://github.com/PlanExeOrg/PlanExe", stars: "336", desc: "Plan generation from description" },
              { name: "ARC-Interactive-History-Dataset", url: "https://github.com/neoneye/ARC-Interactive-History-Dataset", stars: "117", desc: "Human ARC-solving interaction data" },
              { name: "arc-notes", url: "https://github.com/neoneye/arc-notes", stars: "90", desc: "Research notes on ARC" },
              { name: "arc-dataset-collection", url: "https://github.com/neoneye/arc-dataset-collection", stars: "87", desc: "Curated ARC datasets" },
              { name: "loda-programs", url: "https://github.com/loda-lang/loda-programs", stars: "38", desc: "Integer sequence programs" },
